<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WhatsAppClone" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sea</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="round">
        <item name="cornerSize">50%</item>
    </style>

    <style name="round_image_chat">
        <item name="cornerSize">10%</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="action_title" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.WhatsAppClone" parent="Base.Theme.WhatsAppClone" />
</resources>